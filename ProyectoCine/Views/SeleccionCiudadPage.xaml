        <Image Source="cinepolis2.png" HeightRequest="150" HorizontalOptions="Center" Margin="0,0,0,0"/>
    <!-- XAML -->
        <Picker Title="SELECCIONE SU CIUDAD" SelectedIndexChanged="Picker_SelectedIndexChanged" Margin="10" TextColor="#002069">
        <Picker.ItemsSource>
            <x:Array Type="{x:Type x:String}">
