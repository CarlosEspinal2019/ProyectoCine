<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoCine.Views.DulceriaPage"
             Title="DULCERIA">
    
    <Grid x:Name="listDulceria" Grid.Row="0">
        <Image Source="{Binding Imagen} " WidthRequest="180" HeightRequest="250"/>        
        <Label Text="{Binding Nombre}" Grid.Column="0" Grid.Row="1" TextColor="White" FontSize="20" FontAttributes="Bold"/>
        <Label Text="Descripcion :" Grid.Column="0" Grid.Row="2" TextColor="#F7B700" FontSize="20" FontAttributes="Bold"/>
        <Label Text="{Binding Detalle}" Grid.Column="1" Grid.Row="2" TextColor="White" FontSize="20" FontAttributes="Bold"/>
        <Label Text="Precio :" Grid.Column="0" Grid.Row="3" TextColor="#F7B700" FontSize="20" FontAttributes="Bold"/>
        <Label Text="{Binding Precio}" Grid.Column="1" Grid.Row="3" TextColor="White" FontSize="20" FontAttributes="Bold"/>
        <Label Text="Cantidad" Grid.Column="0" Grid.Row="4" TextColor="#F7B700" FontSize="22" FontAttributes="Bold"/>
        <Entry x:Name="CantidadCombo1" Keyboard="Numeric" WidthRequest="50" TextColor="#e8b439" FontSize="17" FontAttributes="Bold"/>
        <Button Text="Finalizar compra" Grid.ColumnSpan="2" Grid.Row="8"  TextColor="White" HeightRequest="40" MinimumWidthRequest="300" CornerRadius="20" BackgroundColor="#F7B700" Margin="50,10,50,10"/>
    </Grid>
    

</ContentPage>