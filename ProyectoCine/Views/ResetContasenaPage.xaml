<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoCine.Views.ResetContasenaPage"
             NavigationPage.TitleIconImageSource="cinepolis.png">
    <StackLayout>
        <FlexLayout BackgroundColor="#002069" Padding="10" HorizontalOptions="Center">
            <Label Text="Recuperar Contraseña" TextColor="#e8b439" FontSize="22" HorizontalOptions="Center" FontAttributes="Bold"></Label>
        </FlexLayout>

        <StackLayout Padding="5">

            <Image Source="cinepolis2.png" HeightRequest="150" HorizontalOptions="Center" Margin="0,100,0,0"/>


            <StackLayout Orientation="Horizontal" Margin="0,30,0,10">
                <Entry x:Name="ttemail_user_recu" TextColor="#002069"  FontSize="15" Placeholder="Correo electrónico" PlaceholderColor="Black" FontAttributes="None" HorizontalOptions="FillAndExpand" Margin="0,0,0,0" Keyboard="Email" />
            </StackLayout>



            <Button Text="Restablecer" TextColor="White" HeightRequest="40" MinimumWidthRequest="300" CornerRadius="20" BackgroundColor="#002069" Margin="50,10,50,10" x:Name="btn_restablecer" />

        </StackLayout>


    </StackLayout>
</ContentPage>